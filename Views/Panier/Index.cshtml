@{
	ViewBag.Title = "Index";
}
<script src="/js/Scripts/MonScript.js"
		type="text/javascript"></script>
<h2>Mon panier</h2>
<div>
	@if (ViewBag.Liste.Count > 0)
	{
		<table class="table table-hover">
			<tr class="carousel">
				<th>
					Image
				</th>
				<th class="danger">
					Infos
				</th>
			</tr>
			@foreach (var item in ViewBag.Liste)
			{
				<tr id="row-@item.Prod.ProductId">
					<td>
						<img src="~/images/@item.Prod.ImageUrl" style="width:250px;height:250px">
					</td>
					<td>
						<h5>Nom : @item.Prod.ProductName </h5><hr />
						<h5>Quantité : <span id="quantite_@item.Prod.ProductId">@item.quantite</span></h5><hr />
						<a href="#" class="PlusProduit" data-id="@item.Prod.ProductId">
							<img src="~/images/add.png" style="width:25px;height:25px">
						</a>
						<a href="#" class="MinusProduit" data-id="@item.Prod.ProductId">
							<img src="~/images /moin.png" style="width:25px;height:25px">
						</a>
						<a href="#" class="RemoveLink" data-id="@item.Prod.ProductId">
							<img src="~/images /delet.png" style="width:25px;height:25px">
						</a>
						<div>
							<hr />
							<h5>
								Prix de <span id="rquantite_@item.Prod.ProductId">@item.quantite</span> article(s) : <span id="total_@item.Prod.ProductId">@item.TotalPrice</span>
							</h5><hr />
						</div>
					</td>
				</tr>
			}
		</table>
		<div>
			<strong>Prix total à payer : </strong>
			<div id="totalapayer">@ViewBag.total</div>
		</div>
		@if (ViewBag.total > 0)
		{

			<form method="post" asp-area="" asp-controller="Panier" asp-action="CheckOut">
				<button type="submit" class="btn btn-primary">Payer</button>
			</form>
		}
	}
	else
	{
		<p>Votre panier est vide</p>
	}
</div>